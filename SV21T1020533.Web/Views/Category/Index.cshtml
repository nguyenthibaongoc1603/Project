@model IEnumerable<SV21T1020533.DomainModels.Category>
@{
    ViewBag.Title = "Quản lý Loại hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form action ="~/Category" method="get">
            <div class="input-group">

                <input type="text" class="form-control" placeholder="Nhập tên loại hàng cần tìm" autofocus value="@ViewBag.SearchValue" />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                    <a href="~/Category/Create" class="btn btn-primary">
                        <i class="fa fa-plus"> </i> Bổ sung
                    </a>
                </div>

            </div>
        </form>

        <p style="margin: 10px 0 10px 0">
            Có <b>@ViewBag.RowCount</b> loại hàng trong tổng số <b>@ViewBag.PageCount</b> trang
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên Ngành Hàng</th>
                        <th>Mô tả</th>
                        <th style="width: 80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>@item.Description</td>
                            <td class="text-right">
                                <a class="btn btn-xs btn-info" href="~/Category/Edit/@item.CategoryID">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" href="~/Category/Delete/@item.CategoryID"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="~/Category?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>