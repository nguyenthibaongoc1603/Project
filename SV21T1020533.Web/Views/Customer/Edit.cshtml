@model SV21T1020533.DomainModels.Customer
@{
}
<div class="box box-body">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input type="text" class="form-control" autofocus name="@nameof(Model.CustomerName)" value="@Model.CustomerName"/>
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="@nameof(Model.ContactName)" value="@Model.ContactName"/>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="@nameof(Model.Phone)" value="@Model.Phone"/>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="@nameof(Model.Email)" value="@Model.Email"/>
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="@nameof(Model.Address)" value="@Model.Address" />
            </div>

            <div class="form-group">
                <label>Tỉnh/Thành:</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    <option value="">--Chọn Tỉnh/Thành--</option>
                    @foreach(var item in SV21T1020533.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if(item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>
                                @item.ProvinceName
                            </option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">
                                @item.ProvinceName
                            </option>
                        }
                    }
                    
                </select>
            </div>

            <div class="checkbox">
                <label><input type="checkbox" value="true" name="@nameof(Model.IsLocked)" @(Model.IsLocked ? "checked" : "")>Tài khoản đang bị khóa bị khóa?</label>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o"></i>Lưu dữ liệu</button>
                <a href="~/Customer" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>