@model IEnumerable<SV21T1020533.DomainModels.Shipper>
@{
    ViewBag.Title = "Quản lý người giao hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper" method="get">
            <div class="input-group">

                <input type="text" class="form-control" placeholder="Nhập tên người giao hàng cần tìm" autofocus name="searchValue" value=@ViewBag.SearchValue  />

                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                    <a href="~/Shipper/Create" class="btn btn-primary">
                        <i class="fa fa-plus"> </i> Bổ sung
                    </a>
                </div>

            </div>
        </form>

        <p style="margin: 10px 0 10px 0">
            Có <b>@ViewBag.RowCount</b> người giao hàng trong tổng số <b>@ViewBag.PageCount</b>
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên</th>
                        <th>Điện thoại</th>
                        <th style="width: 80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.ShipperName</td>
                            <td>@item.Phone</td>
                            <td>
                                <a class="btn btn-xs btn-info" href="~/Shipper/Edit/@item.ShipperID">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a class="btn btn-xs btn-danger" href="~/Shipper/Delete/@item.ShipperID"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <ul class="pagination">
                @for (int p = 1; p <= ViewBag.PageCount; p++)
                {
                    if (p == ViewBag.Page)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="~/Customer?page=@p&searchValue=@ViewBag.SearchValue">@p</a></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>